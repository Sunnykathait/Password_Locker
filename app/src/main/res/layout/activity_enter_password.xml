<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EnterPassword">

    <TextView
        android:id="@+id/enterPP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:gravity="center"
        android:paddingVertical="20dp"
        android:text="Enter the pasword"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/check_appname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enterPP"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="30dp"
        android:text="AppName"
        android:textColor="@color/black"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/check_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/check_appname"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:text="userName"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:paddingVertical="10dp"
        android:text="( Required to confirm your identity)"
        android:textColor="@color/black" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/check_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter the password to open"
                android:inputType="textPassword" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/go_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go"
            android:layout_gravity="right"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:paddingHorizontal="20dp"
            android:paddingVertical="5dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"/>

    </LinearLayout>

</RelativeLayout>