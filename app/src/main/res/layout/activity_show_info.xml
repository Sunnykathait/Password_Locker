<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".showInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/info_appName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/kulim_park"
            android:gravity="center"
            android:text="user"
            android:textColor="@color/black"
            android:textSize="40dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_weight="0"
                android:fontFamily="sans-serif-light"
                android:text="Application Name : "
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/info_userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-medium"
                android:text="userName"
                android:textColor="@color/black"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_weight="0"
                android:fontFamily="sans-serif-light"
                android:text="password : "
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/info_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-black"
                android:text="APPNAME"
                android:textColor="@color/black"
                android:textSize="20dp" />

        </LinearLayout>

        <TextView
            android:fontFamily="sans-serif-light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="40dp"
            android:text="Description"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/info_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif"
            android:text="sdfsadfsdf"
            android:textColor="@color/black"
            android:textSize="25dp" />


    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <TextView
            android:textColor="@color/black"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:layout_height="wrap_content"
            android:text="Delete"/>

        <TextView
            android:textColor="@color/black"
            android:layout_marginVertical="5dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:layout_height="wrap_content"
            android:text="Edit"/>

        <TextView
            android:textColor="@color/black"
            android:layout_marginVertical="5dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:layout_height="wrap_content"
            android:text="Marks as Important"/>



    </LinearLayout>




</RelativeLayout>